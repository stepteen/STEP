<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/return1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_senddynamic"
            />
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_comment_content"
        android:layout_weight="1"
        >
    </ListView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray"
    >

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_comment"
            android:padding="5dp"
            android:background="@drawable/pinglunbiaokuang"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sendedit"
                android:id="@+id/et_comment_content"
                android:textCursorDrawable="@drawable/jiaodian"
                />
        </LinearLayout>
        <Button
            android:text="发送"
            android:textColor="@color/white"
            android:id="@+id/btn_SendComment"
            android:textSize="16sp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/ll_comment"
            />
    </LinearLayout>
</LinearLayout>